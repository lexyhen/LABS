# Blinky/SOS Lab 1.1
# The LED will turn on for one second and then turn off for one second
import time
import board
import digitalio

# setup
ledPin = digitalio.DigitalInOut(board.D13)
ledPin.direction = digitalio.Direction.OUTPUT

# loop
while True:
    ledPin.value = True
    time.sleep(0.5)
    ledPin.value = False
    time.sleep(0.5)
